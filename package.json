{
  "name": "@dgrammatiko/j4-dev-tools",
  "version": "0.0.1-alpha",
  "publishConfig": {
    "access": "public"
  },
  "description": "Tools for developing J4 extensions",
  "main": "build.js",
  "scripts": {
    "i": "node ./build.js -i",
    "l": "node ./build.js -l",
    "b": "node ./build.js -b media_src",
    "init": "npm run i && npm run l && npm run b",
    "lint-css": "npx stylelint media_src/css/.",
    "lint-js": "npx eslint media_src/js/.",
    "lint": "npm run lint-css && npm run lint-js",
    "update:browserlist": "npx browserslist@latest --update-db"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dgrammatiko/j4-tools.git"
  },
  "keywords": [
    "Joomla",
    "scaffolding",
    "components",
    "modules",
    "plugins",
    "libraries",
    "templates",
    "transpilling",
    "scss",
    "postcss"
  ],
  "author": "Dimitris Grammatikogiannis",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dgrammatiko/j4-tools/issues"
  },
  "homepage": "https://github.com/dgrammatiko/j4-tools#readme",
  "dependencies": {
    "@rollup/plugin-babel": "^5.0.4",
    "@rollup/plugin-replace": "^2.3.3",
    "@rollup/plugin-terser": "0.1.0",
    "adm-zip": "^0.5.9",
    "autoprefixer": "^9.8.0",
    "axios": "^1.2.0",
    "chalk": "^3.0.0",
    "commander": "^5.0.0",
    "cssnano": "^4.1.10",
    "eslint": "^8.2.0",
    "fs-jetpack": "^5.1.0",
    "postcss": "^8.3.11",
    "postcss-cli": "8.3.1",
    "postcss-custom-media": "7.0.8",
    "postcss-custom-selectors": "5.1.2",
    "postcss-discard-comments": "4.0.2",
    "postcss-easy-import": "3.0.0",
    "postcss-mixins": "7.0.2",
    "postcss-nested": "5.0.3",
    "postcss-preset-env": "6.7.0",
    "recursive-readdir": "^2.2.2",
    "rollup": "^2.1.0",
    "stylelint": "^13.2.1",
    "stylelint-config-recommended": "^3.0.0",
    "symlink-dir": "^5.1.0"
  }
}

{
  "name": "@dgrammatiko/joomla-tools",
  "version": "0.0.1-alpha.2",
  "publishConfig": {
    "access": "public"
  },
  "description": "Tools for developing J4 extensions",
  "bin": {
    "joomla-tools": "joomla-tools.mjs"
  },
  "type": "module",
  "main": "joomla-tools.mjs",
  "scripts": {
    "i": "node joomla-tools.mjs -i",
    "l": "node joomla-tools.mjs -l",
    "b": "node joomla-tools.mjs -b media_src",
    "r": "node joomla-tools.mjs -r",
    "w": "node joomla-tools.mjs -w",
    "init": "npm run i && npm run l && npm run b",
    "lint-css": "npx stylelint media_src/css/.",
    "lint-js": "npx eslint media_src/js/.",
    "lint": "npm run lint-css && npm run lint-js",
    "update:browserlist": "npx browserslist@latest --update-db",
    "prepublishOnly": "np --no-cleanup --yolo --no-publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dgrammatiko/joomla-tools.git"
  },
  "keywords": [
    "Joomla",
    "scaffolding",
    "components",
    "modules",
    "plugins",
    "libraries",
    "templates",
    "esm",
    "es5",
    "transpilling",
    "scss",
    "postcss"
  ],
  "author": "Dimitris Grammatikogiannis",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dgrammatiko/joomla-tools/issues"
  },
  "homepage": "https://github.com/dgrammatiko/joomla-tools#readme",
  "peerDependencies": {
    "@babel/preset-env": "^7.21.4",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-commonjs": "^24.0.1",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-replace": "^5.0.2",
    "@rollup/plugin-terser": "0.4.1",
    "adm-zip": "^0.5.10",
    "autoprefixer": "^10.4.13",
    "axios": "^1.3.4",
    "chalk": "^5.2.0",
    "chokidar": "^3.5.3",
    "commander": "^10.0.0",
    "cssnano": "^5.1.15",
    "eslint": "^8.35.0",
    "fs-jetpack": "^5.1.0",
    "postcss": "^8.4.21",
    "postcss-cli": "10.1.0",
    "postcss-custom-media": "9.1.3",
    "postcss-custom-selectors": "7.1.3",
    "postcss-discard-comments": "5.1.2",
    "postcss-easy-import": "^4.0.0",
    "postcss-mixins": "9.0.4",
    "postcss-nested": "6.0.1",
    "postcss-preset-env": "8.3.2",
    "recursive-readdir": "^2.2.3",
    "rollup": "^3.17.3",
    "rtlcss": "^4.0.0",
    "sass": "^1.58.3",
    "stylelint": "^15.2.0",
    "stylelint-config-recommended": "^10.0.1 || ^12.0.0",
    "symlink-dir": "^5.1.1",
    "terser": "^5.16.5"
  },
  "devDependencies": {
    "np": "^7.7.0"
  }
}

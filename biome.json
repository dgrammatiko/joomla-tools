{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignore": [
      "node_modules/*",
      "test/fixtures/*"
    ]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "indentStyle": "space",
      "trailingCommas": "all",
      "attributePosition": "auto",
      "lineWidth": 160
    }
  }
}
